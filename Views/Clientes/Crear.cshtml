@model Inventario.Models.Cliente

<h1>Crear Cliente</h1>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="NombreCompleto">Nombre Completo</label>
        <input type="text" class="form-control" asp-for="NombreCompleto" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label for="Telefono">Teléfono</label>
        <input type="text" class="form-control" asp-for="Telefono" />
    </div>

    <button type="submit" class="btn btn-success" style="margin-top: 20px;">Crear</button>
</form>